{
  "cli": {
    "version": ">= 16.31.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "env": {
          "APP_VARIANT": "development",
          "SCOREBAT_KEY": "$SCOREBAT_KEY",
          "API_FOOTBALL_KEY": "$API_FOOTBALL_KEY",
          "SPORTMONKS_KEY": "$SPORTMONKS_KEY",
          "HIGHLIGHTLY_KEY": "$HIGHLIGHTLY_KEY",
          "AD_BANNER": "$AD_BANNER",
          "AD_INTERSTITIAL": "$AD_INTERSTITIAL"
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "env": {
          "APP_VARIANT": "preview",
          "SCOREBAT_KEY": "$SCOREBAT_KEY",
          "API_FOOTBALL_KEY": "$API_FOOTBALL_KEY",
          "SPORTMONKS_KEY": "$SPORTMONKS_KEY",
          "HIGHLIGHTLY_KEY": "$HIGHLIGHTLY_KEY",
          "AD_BANNER": "$AD_BANNER",
          "AD_INTERSTITIAL": "$AD_INTERSTITIAL"
        }
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle",
        "env": {
          "APP_VARIANT": "production",
          "SCOREBAT_KEY": "$SCOREBAT_KEY",
          "API_FOOTBALL_KEY": "$API_FOOTBALL_KEY",
          "SPORTMONKS_KEY": "$SPORTMONKS_KEY",
          "HIGHLIGHTLY_KEY": "$HIGHLIGHTLY_KEY",
          "AD_BANNER": "$AD_BANNER",
          "AD_INTERSTITIAL": "$AD_INTERSTITIAL"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}